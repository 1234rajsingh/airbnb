<%layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h1>Edit Your Listings</h1>
    <form method="post" action="/listing/<%=listing.id%>?_method=PUT" novalidate  class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="litle" class="form-label">title</label>
            <input type="text" name="listing[title]" id="" value="<%=listing.title%>" class="form-control" required>
            <div class="valid-feedback"> looks good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <input type="text" name="listing[description]" id="" value="<%=listing.description%>" class="form-control"required>
            <div class="valid-feedback"> looks good</div>
        
        </div>
        <div class="mb-3">
            <p> Your Original Image</p>
            <img src="<%=oringalimage %>" alt="" srcset="" style="height: 200px; ">
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="file" name="listing[image]" id="" value="" class="form-control">
        </div>
        
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" id=""value="<%=listing.price%>" class="form-control"required>
            
        </div>
       <div class="mb-3 col-md-8">
        <label for="location" class="form-label">location</label>
        <input type="text" name="listing[location]" id="" value="<%=listing.location%>" class="form-control"required>
        

       </div>
    </div>
       <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" id="" value="<%=listing.country%>" class="form-control"required>
        <div class="valid-feedback">country name should we valid</div>
        

       </div>
       
       
        <button class="btn btn-dark mt-3 btn-edit">submit</button>
       </form> 
    </div>
    </div>
</body>
