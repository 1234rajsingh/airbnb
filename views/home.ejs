<%layout("/layouts/boilerplate")%>
<style>
  .filters{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
   
  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
  
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .taxtoogle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 2.5rem;
    padding: 1rem;
    margin-left: 2.5rem;
    display: flex;
    align-items: center;
    
   
  }
  @media only screen and (max-width: 767px) {
    .taxtoogle {
        display: none !important;
    }
}

</style>

<body>

  

  <div class="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i> </div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i> </div>
      <p>Icions cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mounntain</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i> </div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i> </div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowman"></i></div>
      <p>Snow</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cloud-rain"></i></div>
      <p>Rain</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-snowman"></i></div>
      <p>Snow</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cloud-rain"></i></div>
      <p>Rain</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-igloo"></i></div>
      <p>Dom</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tree"></i></div>
      <p>Forest</p>
    </div>
    <div>
      <div class="taxtoogle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  
  </div>

    <!-- <form method="get" action="/listing/new">
        <button>add new listing</button>
    </form> -->
   <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">

    <%for(listing of alllisting){%>
      <a href="/listing/<%=listing._id%>" class="link1">
          <div class="card listingcard col" >
            <img src="<%=listing.image.url%>" class="card-img-top image " style="height: 20rem;" alt="...">
            <div class="card-img-overlay"></div>
            <div class="card-body">
             
              <p class="card-text">
               <b> <%=listing.title%></b>
                <br>
                &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
        </a>
    <%}%>
   </div>
      

  <script>
    let taxt = document.getElementById("flexSwitchCheckDefault")
    taxt.addEventListener("click",()=>{
      let taxinfo=document.getElementsByClassName("tax-info")
      for(info of taxinfo){
        if(info.style.display !="inline"){
          info.style.display = "inline"
        }else{
          info.style.display = "none"
        }
      }
   
    })
//     if (window.innerWidth <= 767) {
//     document.querySelector('.taxtoogle').style.display = 'none';
// }


  </script>
</body>
