<%layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>listing : details</h1>
            </div>
            <div class="card col-6 offset-2">
                <div class="card  listingcard">
                    <img src="<%=listing.image.url%>" class="card-img-top image show-image" alt="listing_image">
                    <div class="card-body">
                      <p class="card-text">
                        <i>Owned by <%=listing.Owner.username%></i></p>
                        <p class="card-text"> <b><%=listing.title%></b></p>
                        <p class="card-text"><%=listing.description%></p>
                        <p class="card-text"> &#8377; <%=listing.price%></p>
                        <p class="card-text"> <%=listing.location%></p>
                        <p class="card-text"> <%=listing.country%></p>
                        
                        

                    
                    </div>
                  </div>
            </div>
       
           <div class="btns mt-3" >
            <a href="/listing/edit/<%=listing.id%>" class="btn btn-success col-1 offset-2">edit</a>
            <form method="post" action="/listing/<%=listing.id%>?_method=DELETE">
                <button class="btn btn-danger offset-4 danger">DELETE</button>
 </form>
    </div>
    
    
   
 <div class="col-8 offset-2 mb-3">
  
  <%if(CurrUser){%>
<h3>Leave a Review</h3>
<form method="post" action="/listing/<%=listing.id%>/review" novalidate class="needs-validation" >


  <div class="mb-3 mt-3">
    <label for="rating" class="form-label">Rating</label>
  <fieldset class="starability-slot">
   
  
    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
    <label for="first-rate1" title="Terrible">1 star</label>
    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
    <label for="first-rate2" title="Not good">2 stars</label>
    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
    <label for="first-rate3" title="Average">3 stars</label>
    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
    <label for="first-rate4" title="Very good">4 stars</label>
    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
    <label for="first-rate5" title="Amazing">5 stars</label>
  </fieldset>
</div>
  <div class="mb-3 mt-3">
    <label for="comment" class="form-label"> Comment</label>
    <textarea name="review[comment]" id="comment" cols="20" rows="5" class="form-control"
    required
    > </textarea>
    <div class="invalid-feedback">fill this comment</div>
  </div>
  <button class="btn btn-outline-dark">Submit</button>
</form>
<%}%>
<hr>
<p><b>All Reviews</b></p>
<div class="row">
  <%for(review of listing.review){%>
 
    <div class="card col-5 ms-3 mb-3" >
      <div class="card-body">
        <h5 class="card-title"><%=review.auther.username%></h5>
        <p class="starability-result card-text" data-rating="<%=review.rating%>">
          
        </p>
        <p class="card-text"><%=review.comment%></p>
    
      </div>
      <form class="mb-3" method="post" action="/listing/<%=listing._id%>/review/<%=review._id%>?_method=DELETE">
        <button class="btn btn-sm btn-danger">DELETE</button>
      </form>
   
    </div>
    
    <%}%>
  </div>



          </div>  
      
          

    </div>
   

</body>
</html>